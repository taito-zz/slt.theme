<html
  i18n:domain="slt.theme"
  lang="en"
  metal:use-macro="context/main_template/macros/master"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:tal="http://xml.zope.org/namespaces/tal">
  <body>
    <metal:main fill-slot="main">
      <section class="collective-cart-shopping slt-theme-addresses">
        <div tal:replace="structure provider:plone.abovecontenttitle" />
        <h1 class="documentFirstHeading" i18n:domain="slt.policy" i18n:translate="">Addresses</h1>
        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <p
          i18n:translate="add_addresses"
          tal:condition="not: view/addresses">Add commonly used addresses to make your order easier.</p>
        <a
          class="shopping-button"
          i18n:translate=""
          tal:attributes="href string: ${context/absolute_url}/++add++collective.cart.shopping.CustomerInfo"
          >Add New Address</a>
      </section>
    </metal:main>
  </body>
</html>