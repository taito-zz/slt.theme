<section id="shipping-info" i18n:domain="collective.cart.shopping">
  <form method="post" tal:attributes="action context/@@plone_context_state/current_base_url">
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">First Name</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="first-name" type="text" required="required" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Last Name</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="last-name" type="text" required="required" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Organization</tal:label>
      </dt>
      <dd>
        <input name="organization" type="text" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">VAT Number</tal:label>
      </dt>
      <dd>
        <input name="vat" type="text" placeholder="FI" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">E-mail</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="email" type="email" required="required" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Street</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="street" type="text" required="required" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Post Code</tal:label>
      </dt>
      <dd>
        <input name="post" type="text" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">City</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="city" type="text" required="required" />
      </dd>
    </dl>
    <dl class="field">
      <dt>
        <tal:label i18n:translate="">Phone Number</tal:label>
        <span class="required" i18n:domain="plone" i18n:attributes="title" title="title_required"> </span>
      </dt>
      <dd>
        <input name="phone" type="tel" required="required" />
      </dd>
    </dl>
    <p id="billing-same-as-shipping">
      <input name="billing-same-as-shipping" value="same" type="checkbox" checked="checked" />
      <span i18n:domain="slt.theme" i18n:translate="">Billing address is same as shipping address.</span>
    </p>
    <dl class="field shipping-methods" tal:condition="viewlet/shipping_methods">
      <dt>
        <tal:label i18n:translate="">Shipping Method</tal:label>
        <span
          class="required"
          i18n:domain="plone"
          i18n:attributes="title"
          tal:condition="not: viewlet/single_shipping_method"
          title="title_required"> </span>
      </dt>
      <dd>
        <div tal:repeat="item viewlet/shipping_methods">
          <label>
            <input
              name="shipping-method"
              type="radio"
              required="required"
              tal:attributes="
                checked item/checked;
                value item/uuid"
              tal:condition="not: viewlet/single_shipping_method" />
            <span tal:content="item/title" />
          </label>
          <p tal:condition="item/description" tal:content="item/description" />
        </div>
      </dd>
    </dl>
    <button
      class="buttons shopping-button back"
      formnovalidate
      i18n:translate=""
      name="form.buttons.back"
      value="form.buttons.back"
      type="submit">
      Back
    </button>
    <button
      class="buttons shopping-button checkout"
      i18n:translate=""
      name="form.to.confirmation"
      value="form.to.confirmation"
      type="submit">
      Next
    </button>
  </form>
</section>